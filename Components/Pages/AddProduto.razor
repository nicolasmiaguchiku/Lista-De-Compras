@page "/AddProduto"
@rendermode InteractiveServer

<PageTitle>Adicionar Produto</PageTitle>
<div class="form-container">
    <h1>Adicionar Produto</h1>
    <form>
        <div class="mb-3">
            <label for="productName" class="form form-table">Produto:</label>
            <input class="form form-control" id="productName" />
        </div>
        <div class="mb-3">
            <label for="productPrice" class="form form-table">Valor:</label>
            <input class="form form-control" id="productPrice" />
        </div>
        <div class="mb-3">
            <label>Categoria:</label>
            <select class="form-select">
                <option value="null">Selecione</option>
                <option value="null">Movel</option>
                <option value="null">Domestico</option>
                <option value="null">Material</option>
            </select>
        </div>
        <div class="mb-3">
            <label for="productLink" class="form form-table">Link</label>
            <input class="form form-control" id="productLink" />
        </div>
        <div class="mb-3">
            <button class="btn btn-success">Adicionar produto</button>
            <a class="btn btn-danger" href="/">Cancelar</a>
        </div>
    </form>
</div>

